<div class="container center p2">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'clearfix col-6 mx-auto left-align', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, class: 'block col-12 mb1 field' %>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>