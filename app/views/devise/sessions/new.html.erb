<div class="container center p2">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'clearfix col-6 mx-auto left-align'}) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, class: 'block col-12 mb1 field' %>


  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off", class: 'block col-12 mb1 field' %>


  <% if devise_mapping.rememberable? -%>
  <label class="block col-12 mb2">
    Remember me
    <%= f.check_box :remember_me %>
  </label>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>